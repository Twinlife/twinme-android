<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <solid android:color="#FFFFFF" />
            <stroke android:width="1dp" android:color="@color/segmented_control_border_color" />
            <corners android:bottomRightRadius="8dp" android:bottomLeftRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="8dp" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/translucent" />
            <stroke android:width="1dp" android:color="@color/segmented_control_border_color" />
            <corners android:bottomRightRadius="8dp" android:bottomLeftRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="8dp" />
        </shape>
    </item>
</selector>