<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/white_color" />
        </shape>
    </item>

    <!-- this mess is what we have to do to get a bottom border only. -->
    <item
        android:top="0dp"
        android:left="-2dp"
        android:right="-2dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="0.5dp"
                android:color="?attr/separator_color" />
            <solid android:color="@null" />
        </shape>
    </item>
</layer-list>