<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/about_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <include
        android:id="@+id/about_activity_tool_bar"
        layout="@layout/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/about_activity_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/about_activity_tool_bar">

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/about_activity_container_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/about_activity_version_view"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/item_light_bottom_border"
                android:layout_below="@+id/about_activity_message_view">

                <TextView
                    android:id="@+id/about_activity_version_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start"
                    android:background="@android:color/transparent"
                    android:text="@string/about_activity_version"
                    app:layout_marginEndPercent="4.26%"
                    app:layout_marginStartPercent="4.53%" />

                <TextView
                    android:id="@+id/about_activity_version_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:layout_toStartOf="@+id/about_activity_version_image"
                    android:layout_toLeftOf="@+id/about_activity_version_image"
                    app:layout_marginEndPercent="4.26%"
                    app:layout_marginStartPercent="4.53%" />

                <ImageView
                    android:id="@+id/about_activity_version_image"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/end_chevron"
                    app:tint="@color/accessory_color"
                    app:layout_aspectRatio="61.54%"
                    app:layout_heightPercent="21.67%"
                    app:layout_marginEndPercent="4.26%" />
            </androidx.percentlayout.widget.PercentRelativeLayout>

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/about_activity_update_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/about_activity_version_view">

                <TextView
                    android:id="@+id/about_activity_update_title_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/update_app_activity_update_available"
                    app:layout_widthPercent="89.06%" />
            </androidx.percentlayout.widget.PercentRelativeLayout>

            <TextView
                android:id="@+id/about_activity_legal_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@android:color/transparent"
                android:text="@string/about_activity_legal"
                android:textAllCaps="true"
                android:layout_below="@+id/about_activity_update_view" />

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/about_activity_terms_of_use_view"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/item_light_bottom_border"
                android:layout_below="@+id/about_activity_legal_title">

                <TextView
                    android:id="@+id/about_activity_terms_of_use_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start"
                    android:background="@android:color/transparent"
                    android:text="@string/about_activity_terms_of_use"
                    app:layout_marginEndPercent="4.26%"
                    app:layout_marginStartPercent="4.53%" />

                <ImageView
                    android:id="@+id/about_activity_terms_of_use_image"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/end_chevron"
                    app:tint="@color/accessory_color"
                    app:layout_aspectRatio="61.54%"
                    app:layout_heightPercent="21.67%"
                    app:layout_marginEndPercent="4.26%" />
            </androidx.percentlayout.widget.PercentRelativeLayout>

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/about_activity_privacy_policy_view"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/item_light_bottom_border"
                android:layout_below="@+id/about_activity_terms_of_use_view">

                <TextView
                    android:id="@+id/about_activity_privacy_policy_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start"
                    android:background="@android:color/transparent"
                    android:text="@string/about_activity_privacy_policy"
                    app:layout_marginEndPercent="4.26%"
                    app:layout_marginStartPercent="4.53%" />

                <ImageView
                    android:id="@+id/about_activity_privacy_policy_image"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/end_chevron"
                    app:tint="@color/accessory_color"
                    app:layout_aspectRatio="61.54%"
                    app:layout_heightPercent="21.67%"
                    app:layout_marginEndPercent="4.26%" />
            </androidx.percentlayout.widget.PercentRelativeLayout>

            <TextView
                android:id="@+id/about_activity_open_source_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@android:color/transparent"
                android:text="@string/about_activity_open_source"
                android:textAllCaps="true"
                android:layout_below="@+id/about_activity_privacy_policy_view" />

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/about_activity_application_code_view"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/item_light_bottom_border"
                android:layout_below="@+id/about_activity_open_source_title">

                <TextView
                    android:id="@+id/about_activity_application_code_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start"
                    android:background="@android:color/transparent"
                    android:text="@string/about_activity_application_code"
                    app:layout_marginEndPercent="4.26%"
                    app:layout_marginStartPercent="4.53%" />

                <ImageView
                    android:id="@+id/about_activity_application_code_image"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/end_chevron"
                    app:tint="@color/accessory_color"
                    app:layout_aspectRatio="61.54%"
                    app:layout_heightPercent="21.67%"
                    app:layout_marginEndPercent="4.26%" />
            </androidx.percentlayout.widget.PercentRelativeLayout>

            <TextView
                android:id="@+id/about_activity_open_source_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@android:color/transparent"
                android:text="@string/about_activity_open_source_information"
                android:layout_below="@+id/about_activity_application_code_view" />

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/about_activity_licences_view"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/item_light_bottom_border"
                android:layout_below="@+id/about_activity_open_source_information">

                <TextView
                    android:id="@+id/about_activity_licences_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start"
                    android:background="@android:color/transparent"
                    android:text="@string/about_activity_open_sources_licences"
                    app:layout_marginEndPercent="4.26%"
                    app:layout_marginStartPercent="4.53%" />

                <ImageView
                    android:id="@+id/about_activity_licences_image"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/end_chevron"
                    app:tint="@color/accessory_color"
                    app:layout_aspectRatio="61.54%"
                    app:layout_heightPercent="21.67%"
                    app:layout_marginEndPercent="4.26%" />
            </androidx.percentlayout.widget.PercentRelativeLayout>

            <TextView
                android:id="@+id/about_activity_copyright_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:text="@string/about_activity_copyright"
                android:layout_below="@+id/about_activity_licences_view"
                app:layout_marginEndPercent="4.53%"
                app:layout_marginStartPercent="4.53%"
                app:layout_marginTopPercent="1.5%" />

        </androidx.percentlayout.widget.PercentRelativeLayout>
    </ScrollView>




</androidx.percentlayout.widget.PercentRelativeLayout>
