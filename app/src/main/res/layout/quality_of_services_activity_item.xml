<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/quality_of_services_activity_item_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/onboarding_step2"
        app:layout_aspectRatio="142.5%" />

    <TextView
        android:id="@+id/quality_of_services_activity_item_message_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quality_of_services_activity_item_image"
        android:layout_above="@+id/quality_of_services_activity_item_settings_view"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/quality_of_service_activity_step1_message"
        android:scrollbars="vertical"
        app:layout_widthPercent="85.33%" />

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/quality_of_services_activity_item_settings_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/quality_of_services_activity_item_settings_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/quality_of_service_activity_settings" />

    </androidx.percentlayout.widget.PercentRelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>