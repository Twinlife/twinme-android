<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <org.twinlife.twinme.utils.CircularImageView
        android:id="@+id/group_member_activity_member_item_avatar_view"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        app:layout_aspectRatio="100%"
        app:layout_heightPercent="81.67%"
        app:layout_marginStartPercent="4.8%" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/group_member_activity_member_item_avatar_view"
        android:layout_toRightOf="@id/group_member_activity_member_item_avatar_view"
        app:layout_marginStartPercent="4.67%"
        app:layout_marginEndPercent="20.26%">

        <TextView
            android:id="@+id/group_member_activity_member_item_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_marginStartPercent="4.67%"
            app:layout_marginEndPercent="20.26%" />

        <TextView
            android:id="@+id/group_member_activity_member_item_invitation_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:visibility="gone"
            android:lines="1"
            app:layout_marginStartPercent="4.67%"
            app:layout_marginEndPercent="20.26%" />

    </LinearLayout>


    <View
        android:id="@+id/group_member_activity_member_item_separator_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignStart="@+id/group_member_activity_member_item_name_view"
        android:layout_alignLeft="@+id/group_member_activity_member_item_name_view"
        android:layout_alignParentBottom="true" />

</androidx.percentlayout.widget.PercentRelativeLayout>
