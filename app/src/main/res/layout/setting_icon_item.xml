<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="128dp">

    <ImageView
        android:id="@+id/setting_icon_item_image_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        app:layout_heightPercent="35%"
        app:layout_aspectRatio="100%"
        app:layout_marginStartPercent="4.53%"
        app:layout_marginEndPercent="4.53%"/>

    <TextView
        android:id="@+id/setting_icon_item_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/setting_icon_item_image_view"
        android:layout_toEndOf="@+id/setting_icon_item_image_view"
        app:layout_marginEndPercent="4.53%" />

    <ImageView
        android:id="@+id/setting_icon_item_accessory_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        app:layout_aspectRatio="61.54%"
        app:layout_heightPercent="21.67%"
        app:layout_marginEndPercent="4.26%"
        android:src="@drawable/end_chevron" />

    <View
        android:id="@+id/setting_icon_item_separator_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="?attr/separator_color"
        android:layout_alignParentBottom="true" />

</androidx.percentlayout.widget.PercentRelativeLayout>