<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <org.twinlife.twinme.utils.AvatarView
        android:id="@+id/side_menu_profile_item_avatar_view"
        android:scaleType="fitCenter"
        android:layout_centerInParent="true"
        app:layout_aspectRatio="100%"
        app:layout_heightPercent="68.75%" />

    <View
        android:id="@+id/side_menu_profile_item_active_profile_view"
        android:layout_centerVertical="true"
        app:layout_heightPercent="40%"
        app:layout_widthPercent="7.5%" />

    <TextView
        android:id="@+id/side_menu_profile_item_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:layout_marginStartPercent="6.25%"
        app:layout_marginEndPercent="6.25%" />
</androidx.percentlayout.widget.PercentRelativeLayout>