<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/call_restriction_activity_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_centerHorizontal="true">

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/call_restriction_activity_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/call_restriction_activity_close_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentEnd="true"
                android:scaleType="fitCenter"
                android:src="@drawable/close"
                android:contentDescription="@string/application_cancel"
                app:layout_aspectRatio="100%" />

            <ImageView
                android:id="@+id/call_restriction_activity_logo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/splash_screen_logo" />

            <TextView
                android:id="@+id/call_restriction_activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/about_activity_quality_of_service"
                android:layout_below="@+id/call_restriction_activity_logo" />

            <ImageView
                android:id="@+id/call_restriction_activity_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/quality_service_step2"
                android:layout_below="@+id/call_restriction_activity_title"
                app:layout_aspectRatio="100%" />

            <TextView
                android:id="@+id/call_restriction_activity_message_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/call_restriction_activity_image"
                android:layout_centerHorizontal="true"
                android:scrollbars="vertical"
                android:gravity="center"
                android:text="@string/call_activity_battery_restriction_message"
                app:layout_widthPercent="88.27%" />

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/call_restriction_activity_settings_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/call_restriction_activity_message_view">

                <TextView
                    android:id="@+id/call_restriction_activity_settings_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/application_authorization_go_settings" />

            </androidx.percentlayout.widget.PercentRelativeLayout>

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/call_restriction_activity_do_not_show_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/call_restriction_activity_settings_view">

                <TextView
                    android:id="@+id/call_restriction_activity_do_not_show_title_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/application_do_not_display"
                    app:layout_widthPercent="89.58%" />
            </androidx.percentlayout.widget.PercentRelativeLayout>

        </androidx.percentlayout.widget.PercentRelativeLayout>

    </androidx.percentlayout.widget.PercentRelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>