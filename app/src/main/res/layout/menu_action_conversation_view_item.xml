<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="128dp">


    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/menu_action_conversation_item_icon_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <org.twinlife.twinme.utils.RoundedView
            android:id="@+id/menu_action_conversation_item_rounded_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            app:layout_aspectRatio="100%"/>

        <ImageView
            android:id="@+id/menu_action_conversation_item_icon_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            app:layout_aspectRatio="100%" />

    </androidx.percentlayout.widget.PercentRelativeLayout>

    <TextView
        android:id="@+id/menu_action_conversation_item_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/menu_action_conversation_item_icon_container_view"
        android:layout_toEndOf="@+id/menu_action_conversation_item_icon_container_view"
        app:layout_marginEndPercent="4.53%" />

</androidx.percentlayout.widget.PercentRelativeLayout>