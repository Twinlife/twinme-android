<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/onboarding_space_activity_second_part_item_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/onboarding_space"
        app:layout_aspectRatio="84.51%" />

    <TextView
        android:id="@+id/onboarding_space_activity_second_part_item_message_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/onboarding_space_activity_second_part_item_image"
        android:layout_centerHorizontal="true"
        android:text="@string/create_space_activity_onboarding_message_part_1"
        android:scrollbars="vertical" />

</androidx.percentlayout.widget.PercentRelativeLayout>