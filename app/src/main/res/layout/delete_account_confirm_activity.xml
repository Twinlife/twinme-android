<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/delete_account_confirm_activity_overlay_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="visible" />

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/delete_account_confirm_activity_action_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <View
            android:id="@+id/delete_account_confirm_activity_slide_mark_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:layout_widthPercent="12%" />

        <ImageView
            android:id="@+id/delete_account_confirm_activity_feature_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/delete_account_confirm_activity_slide_mark_view"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/delete_account"
            app:layout_aspectRatio="100%"/>

        <TextView
            android:id="@+id/delete_account_confirm_activity_title_view"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/delete_account_confirm_activity_feature_image_view"
            android:gravity="center"
            android:lines="1"
            android:text="@string/deleted_account_activity_warning"
            app:layout_widthPercent="94%" />

        <TextView
            android:id="@+id/delete_account_confirm_activity_message_view"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/delete_account_confirm_activity_title_view"
            android:gravity="center"
            android:text="@string/account_activity_delete_account"
            app:layout_widthPercent="94%" />

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/delete_account_confirm_activity_confirm_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/delete_account_confirm_activity_message_view">

            <EditText
                android:id="@+id/delete_account_confirm_activity_confirm_edit_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:imeOptions="actionDone"
                android:inputType="textCapCharacters"
                app:layout_marginStartPercent="5.31%"
                app:layout_marginEndPercent="5.31%" />

        </androidx.percentlayout.widget.PercentRelativeLayout>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/delete_account_confirm_activity_confirm_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/delete_account_confirm_activity_confirm_content_view">

            <TextView
                android:id="@+id/delete_account_confirm_activity_confirm_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/deleted_account_activity_delete" />

        </androidx.percentlayout.widget.PercentRelativeLayout>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/delete_account_confirm_activity_cancel_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/delete_account_confirm_activity_confirm_view">

            <TextView
                android:id="@+id/delete_account_confirm_activity_cancel_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/application_cancel" />
        </androidx.percentlayout.widget.PercentRelativeLayout>

    </androidx.percentlayout.widget.PercentRelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>