<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_background" />

    <TextView
        android:id="@+id/splashscreen_activity_twinme_upgrading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:textColorHighlight="#00FFFFFF"
        android:text="@string/application_upgrade"
        app:layout_marginTopPercent="6%"
        app:layout_widthPercent="81.07%" />

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="28.71%"
        app:layout_widthPercent="52%"
        app:layout_heightPercent="42.58%">

        <ImageView
            android:id="@+id/splashscreen_activity_logo_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_white"
            app:layout_heightPercent="70.56%" />

        <ImageView
            android:id="@+id/splashscreen_activity_twinme_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/splashscreen_text"
            app:layout_heightPercent="35.91%" />

    </androidx.percentlayout.widget.PercentRelativeLayout>

    <ImageView
        android:id="@+id/splashscreen_activity_premium_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

</androidx.percentlayout.widget.PercentRelativeLayout>