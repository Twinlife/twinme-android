<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ProgressBar
        android:id="@+id/export_activity_progress_item_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:progressDrawable="@drawable/stream_audio_progress_bar_shape"
        android:max="100"
        app:layout_widthPercent="90.93%" />

    <TextView
        android:id="@+id/export_activity_progress_item_progress_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/export_activity_progress_item_progress_bar"
        app:layout_marginStartPercent="4.53%"
        app:layout_marginEndPercent="4.53%" />

    <TextView
        android:id="@+id/export_activity_progress_item_message_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/export_activity_progress_item_progress_view"
        app:layout_marginStartPercent="4.53%"
        app:layout_marginEndPercent="4.53%" />

</androidx.percentlayout.widget.PercentRelativeLayout>