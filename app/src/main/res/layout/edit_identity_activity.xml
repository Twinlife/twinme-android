<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_identity_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/edit_identity_activity_avatar_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/edit_identity_activity_no_avatar_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:scaleType="fitCenter"
        android:src="@drawable/edit_avatar"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="14.99%"
        app:layout_aspectRatio="107%"
        app:layout_widthPercent="20%" />

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/edit_identity_activity_content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/show_contact_content">

        <View
            android:id="@+id/edit_identity_activity_slide_mark_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:layout_widthPercent="12%" />

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/edit_identity_activity_content_header_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/edit_identity_activity_title_view"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:lines="1"
                android:text="@string/application_profile"
                app:layout_widthPercent="56%" />

        </androidx.percentlayout.widget.PercentRelativeLayout>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/edit_identity_activity_name_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/edit_identity_activity_content_header_view">

            <EditText
                android:id="@+id/edit_identity_activity_name_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:background="@android:color/transparent"
                android:hint="@string/application_name_hint"
                android:imeOptions="actionDone"
                android:inputType="text|textNoSuggestions|textCapSentences"
                app:layout_marginStartPercent="5.31%"
                app:layout_marginEndPercent="5.31%" />

        </androidx.percentlayout.widget.PercentRelativeLayout>

        <TextView
            android:id="@+id/edit_identity_activity_counter_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_identity_activity_name_content_view"
            android:layout_alignEnd="@+id/edit_identity_activity_name_content_view" />

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/edit_identity_activity_description_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/edit_identity_activity_name_content_view">

            <EditText
                android:id="@+id/edit_identity_activity_description_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/navigation_activity_about_twinme"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:inputType="textMultiLine|textNoSuggestions|textCapSentences"
                app:layout_marginStartPercent="5.31%"
                app:layout_marginEndPercent="5.31%"
                app:layout_marginTopPercent="4.92%"
                app:layout_marginBottomPercent="4.92%" />
        </androidx.percentlayout.widget.PercentRelativeLayout>

        <TextView
            android:id="@+id/edit_identity_activity_counter_description_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_identity_activity_description_content_view"
            android:layout_alignEnd="@+id/edit_identity_activity_description_content_view" />

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/edit_identity_activity_save_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/edit_identity_activity_description_content_view">

            <TextView
                android:id="@+id/edit_identity_activity_save_title_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/application_save"
                app:layout_widthPercent="89.06%" />

        </androidx.percentlayout.widget.PercentRelativeLayout>
    </androidx.percentlayout.widget.PercentRelativeLayout>

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/edit_identity_activity_back_clickable_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        app:layout_aspectRatio="100%">

        <org.twinlife.twinme.utils.RoundedView
            android:id="@+id/edit_identity_activity_back_rounded_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/edit_identity_activity_back_image_view"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/start_chevron"
            app:layout_aspectRatio="62.5%"
            app:layout_heightPercent="37.5%" />

    </androidx.percentlayout.widget.PercentRelativeLayout>

    <ProgressBar
        android:id="@+id/edit_identity_activity_progress_bar"
        style="@android:style/Widget.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</androidx.percentlayout.widget.PercentRelativeLayout>