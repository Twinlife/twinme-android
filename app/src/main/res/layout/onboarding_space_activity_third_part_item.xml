<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/onboarding_space_activity_third_part_item_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/premium_feature_space"
        app:layout_aspectRatio="142.5%" />

    <TextView
        android:id="@+id/onboarding_space_activity_third_part_item_message_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/onboarding_space_activity_third_part_item_image"
        android:layout_above="@+id/onboarding_space_activity_third_part_item_create_space_view"
        android:layout_centerHorizontal="true"
        android:text="@string/create_space_activity_onboarding_message_part_3"
        android:scrollbars="vertical" />

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/onboarding_space_activity_third_part_item_create_space_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/onboarding_space_activity_item_do_not_show_view">

        <TextView
            android:id="@+id/onboarding_space_activity_third_part_item_create_space_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/create_space_activity_title" />

    </androidx.percentlayout.widget.PercentRelativeLayout>

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/onboarding_space_activity_item_do_not_show_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/onboarding_space_activity_item_do_not_show_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/application_do_not_display"
            app:layout_widthPercent="89.58%" />
    </androidx.percentlayout.widget.PercentRelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>