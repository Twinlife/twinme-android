<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="?attr/white_color"
    android:orientation="vertical">

    <org.twinlife.twinme.utils.RoundedView
        android:id="@+id/navigation_activity_child_notification_rounded_view"
        android:layout_height="0dp"
        app:layout_marginStartPercent="1.2%"
        app:layout_aspectRatio="100%"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/navigation_activity_child_level1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_marginStartPercent="5.6%"
        app:layout_marginBottomPercent="8.04%"
        android:textAllCaps="true"
        android:gravity="start|bottom"
        android:visibility="gone" />

    <TextView
        android:id="@+id/navigation_activity_child_level2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_marginStartPercent="5.6%"
        android:gravity="start|center_vertical"
        android:visibility="gone" />

    <TextView
        android:id="@+id/navigation_activity_child_subscribe_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/navigation_activity_child_accessory_level2"
        android:layout_toStartOf="@+id/navigation_activity_child_accessory_level2"
        android:layout_centerVertical="true"
        app:layout_marginEndPercent="2%"
        android:gravity="center"
        android:padding="5dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/navigation_activity_child_accessory_level2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        app:layout_aspectRatio="61.54%"
        app:layout_heightPercent="21.67%"
        app:layout_marginEndPercent="5.6%"
        android:src="@drawable/end_chevron"
        android:visibility="gone" />

    <View
        android:id="@+id/navigation_activity_child_separator_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="?attr/separator_color"
        android:layout_alignParentBottom="true" />

</androidx.percentlayout.widget.PercentRelativeLayout>