<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="80dp">

    <org.twinlife.twinme.utils.RoundedView
        android:id="@+id/personalization_activity_color_item_color_view"
        android:layout_centerInParent="true"
        app:layout_aspectRatio="100%"
        app:layout_heightPercent="52.5%" />

    <org.twinlife.twinme.utils.RoundedView
        android:id="@+id/personalization_activity_color_item_color_content_view"
        android:layout_centerInParent="true"
        app:layout_aspectRatio="100%"
        app:layout_heightPercent="40%" />

    <ImageView
        android:id="@+id/personalization_activity_color_item_no_color_content_view"
        android:layout_centerInParent="true"
        android:src="@drawable/no_style_space"
        app:layout_aspectRatio="100%"
        app:layout_heightPercent="40%" />

    <View
        android:id="@+id/personalization_activity_color_item_separator_view"
        android:layout_width="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:layout_heightPercent="50%" />

</androidx.percentlayout.widget.PercentRelativeLayout>