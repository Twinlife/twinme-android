<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/show_profile_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/show_profile_activity_avatar_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true" />

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/show_profile_activity_add_contact_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:layout_aspectRatio="100%"
        app:layout_heightPercent="6%"
        app:layout_marginEndPercent="4.53%"
        android:contentDescription="@string/add_contact_activity_title">

        <org.twinlife.twinme.utils.RoundedView
            android:id="@+id/show_profile_activity_add_contact_rounded_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/show_profile_activity_add_contact_icon_view"
            android:layout_width="0dp"
            android:layout_centerInParent="true"
            android:src="@drawable/action_bar_add_contact"
            app:layout_aspectRatio="100%"
            app:layout_heightPercent="57.5%" />
    </androidx.percentlayout.widget.PercentRelativeLayout>

    <ScrollView
        android:id="@+id/show_profile_activity_content_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/show_profile_activity_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/show_contact_content">

            <View
                android:id="@+id/show_profile_activity_slide_mark_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:layout_widthPercent="12%" />

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/show_profile_activity_content_header_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/show_profile_activity_title_view"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/application_profile"
                    app:layout_widthPercent="66.67%" />

                <androidx.percentlayout.widget.PercentRelativeLayout
                    android:id="@+id/show_profile_activity_edit_clickable_view"
                    app:layout_widthPercent="19.73%"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">

                    <ImageView
                        android:id="@+id/show_profile_activity_edit_image_view"
                        android:layout_centerInParent="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/action_edit"
                        app:layout_aspectRatio="100%"
                        app:layout_heightPercent="40%" />
                </androidx.percentlayout.widget.PercentRelativeLayout>

            </androidx.percentlayout.widget.PercentRelativeLayout>

            <TextView
                android:id="@+id/show_profile_activity_description_text_view"
                android:layout_below="@+id/show_profile_activity_content_header_view"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                app:layout_widthPercent="90.93%" />

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/show_profile_activity_twincode_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/show_profile_activity_description_text_view">

                <ImageView
                    android:id="@+id/show_profile_activity_twincode_icon_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/qrcode" />

                <TextView
                    android:id="@+id/show_profile_activity_twincode_title_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/show_profile_activity_twincode_icon_view"
                    android:layout_toEndOf="@+id/show_profile_activity_twincode_icon_view"
                    android:text="@string/profile_fragment_twincode_title" />

            </androidx.percentlayout.widget.PercentRelativeLayout>

            <TextView
                android:id="@+id/show_profile_activity_activity_message_view"
                android:layout_height="wrap_content"
                android:layout_below="@+id/show_profile_activity_twincode_view"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/profile_fragment_message"
                app:layout_widthPercent="90.93%" />
        </androidx.percentlayout.widget.PercentRelativeLayout>

    </ScrollView>

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/show_profile_activity_back_clickable_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        app:layout_aspectRatio="100%">

        <org.twinlife.twinme.utils.RoundedView
            android:id="@+id/show_profile_activity_back_rounded_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/show_profile_activity_back_image_view"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/start_chevron"
            app:layout_aspectRatio="62.5%"
            app:layout_heightPercent="37.5%" />

    </androidx.percentlayout.widget.PercentRelativeLayout>

    <ProgressBar
        android:id="@+id/show_profile_activity_progress_bar"
        style="@android:style/Widget.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</androidx.percentlayout.widget.PercentRelativeLayout>