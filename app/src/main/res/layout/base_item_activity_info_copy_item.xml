<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/info_copy_item_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:background="@drawable/allowed_copy"
            app:layout_aspectRatio="83.33%"
            app:layout_heightPercent="30%"
            app:layout_marginLeftPercent="3.47%"
            app:layout_marginStartPercent="3.47%" />

        <TextView
            android:id="@+id/info_copy_item_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/info_copy_item_image_view"
            android:text="@string/info_item_activity_may_be_copied"
            android:textColor="?attr/font_default_color"
            app:layout_marginLeftPercent="3.07%"
            app:layout_marginStartPercent="3.07%"
            app:layout_marginEndPercent="3.07%"
            app:layout_marginRightPercent="3.07%" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="?attr/separator_color"
            android:layout_alignParentBottom="true" />

    </androidx.percentlayout.widget.PercentRelativeLayout>

</RelativeLayout>