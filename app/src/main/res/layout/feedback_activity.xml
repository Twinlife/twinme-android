<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/feedback_activity_content_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/feedback_activity_tool_bar"
        layout="@layout/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/feedback_activity_contact_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/feedback_activity_tool_bar">

        <RelativeLayout
            android:id="@+id/feedback_activity_contact_container_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/feedback_activity_contact_content_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <EditText
                    android:id="@+id/feedback_activity_contact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/feedback_activity_contact"
                    android:background="@android:color/transparent"
                    android:imeOptions="actionNext"
                    android:inputType="text|textNoSuggestions|textCapSentences"
                    app:layout_marginStartPercent="5.31%"
                    app:layout_marginEndPercent="5.31%" />

            </androidx.percentlayout.widget.PercentRelativeLayout>

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/feedback_activity_subject_content_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/feedback_activity_contact_content_view">

                <EditText
                    android:id="@+id/feedback_activity_subject"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/feedback_activity_subject"
                    android:background="@android:color/transparent"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailSubject|textNoSuggestions|textCapSentences"
                    app:layout_marginStartPercent="5.31%"
                    app:layout_marginEndPercent="5.31%" />

            </androidx.percentlayout.widget.PercentRelativeLayout>

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/feedback_activity_message_content_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/feedback_activity_subject_content_view">

                <EditText
                    android:id="@+id/feedback_activity_message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/feedback_activity_message"
                    android:background="@android:color/transparent"
                    android:gravity="top"
                    android:inputType="textMultiLine|textNoSuggestions|textCapSentences"
                    android:scrollbars="vertical"
                    app:layout_marginStartPercent="5.31%"
                    app:layout_marginEndPercent="5.31%"
                    app:layout_marginTopPercent="4.92%"
                    app:layout_marginBottomPercent="4.92%" />
            </androidx.percentlayout.widget.PercentRelativeLayout>

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/feedback_activity_logs_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/feedback_activity_message_content_view">

                <org.twinlife.twinme.utils.SwitchView
                    android:id="@+id/feedback_activity_logs_checkbox"
                    style="@style/textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:checked="true"
                    android:textOn=""
                    android:textOff=""
                    android:text="@string/feedback_activity_send_logs"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb_on"
                    android:switchMinWidth="0dp" />
            </androidx.percentlayout.widget.PercentRelativeLayout>

            <TextView
                android:id="@+id/feedback_activity_logs_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/feedback_activity_logs_view"
                android:layout_alignLeft="@+id/feedback_activity_logs_view"
                android:layout_below="@+id/feedback_activity_logs_view"
                android:text="@string/feedback_activity_info_logs"
                android:gravity="center_vertical|start" />

            <TextView
                android:id="@+id/feedback_activity_logs_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/feedback_activity_logs_info"
                android:layout_alignLeft="@+id/feedback_activity_logs_info"
                android:layout_below="@+id/feedback_activity_logs_info"
                android:text="@string/feedback_activity_logs"/>

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/feedback_activity_send_content_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/feedback_activity_logs_report">

                <TextView
                    android:id="@+id/feedback_activity_send_title_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/feedback_activity_send"
                    app:layout_widthPercent="89.06%" />

            </androidx.percentlayout.widget.PercentRelativeLayout>

            <TextView
                android:id="@+id/feedback_activity_device_info"
                android:layout_alignStart="@+id/feedback_activity_send_content_view"
                android:layout_alignLeft="@+id/feedback_activity_send_content_view"
                android:layout_below="@+id/feedback_activity_send_content_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"/>

        </RelativeLayout>
    </ScrollView>

</androidx.percentlayout.widget.PercentRelativeLayout>
