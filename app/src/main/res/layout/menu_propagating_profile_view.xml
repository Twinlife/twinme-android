<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/menu_propagating_profile_view_overlay_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="visible" />

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/menu_propagating_profile_view_action_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <View
            android:id="@+id/menu_propagating_profile_view_slide_mark_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:layout_widthPercent="12%" />

        <TextView
            android:id="@+id/menu_propagating_profile_view_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/edit_profile_activity_propagating_message"
            android:layout_below="@+id/menu_propagating_profile_view_slide_mark_view"
            app:layout_widthPercent="94%" />

        <TextView
            android:id="@+id/menu_propagating_profile_view_subtitle_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/edit_profile_activity_propagating_ask_message"
            android:layout_below="@+id/menu_propagating_profile_view_title_view"
            app:layout_widthPercent="94%" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menu_propagating_profile_view_list_view"
            android:layout_below="@+id/menu_propagating_profile_view_subtitle_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/menu_propagating_profile_view_confirm_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/menu_propagating_profile_view_list_view">

            <TextView
                android:id="@+id/menu_propagating_profile_view_confirm_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/application_save" />

        </androidx.percentlayout.widget.PercentRelativeLayout>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/menu_propagating_profile_view_cancel_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/menu_propagating_profile_view_confirm_view">

            <TextView
                android:id="@+id/menu_propagating_profile_view_cancel_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/application_cancel" />
        </androidx.percentlayout.widget.PercentRelativeLayout>

    </androidx.percentlayout.widget.PercentRelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>