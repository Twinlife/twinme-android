<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:id="@+id/call_floating_layout">

    <View
        android:id="@+id/info_floating_view_background_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        app:layout_aspectRatio="100%" />

    <ImageView
        android:id="@+id/info_floating_view_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        app:layout_heightPercent="60%"
        app:layout_aspectRatio="100%" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/info_floating_view_animation_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:lottie_rawRes="@raw/shield_animation"
        app:lottie_loop="false"
        app:lottie_autoPlay="false"
        android:layout_centerVertical="true"
        app:layout_heightPercent="60%"
        app:layout_aspectRatio="100%" />

    <TextView
        android:id="@+id/info_floating_view_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:maxLines="1"
        android:layout_toEndOf="@+id/info_floating_view_image"
        android:layout_toRightOf="@+id/info_floating_view_image" />

</androidx.percentlayout.widget.PercentRelativeLayout>
