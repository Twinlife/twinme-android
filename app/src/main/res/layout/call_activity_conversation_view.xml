<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/call_activity_conversation_container_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/call_activity_conversation_close_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:src="@drawable/close"
            android:contentDescription="@string/application_cancel"
            app:layout_aspectRatio="100%"
            app:layout_marginEndPercent="2.62%" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/call_activity_conversation_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/call_activity_conversation_close_view"
            android:layout_above="@+id/call_activity_conversation_content_send_view"/>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/call_activity_conversation_content_send_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <org.twinlife.twinme.utils.ConversationEditText
                android:id="@+id/call_activity_conversation_edit_text"
                style="@style/textAppearance"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/conversation_activity_message"
                android:inputType="textMultiLine|textAutoCorrect|textAutoComplete|textCapSentences"
                android:scrollbars="vertical"
                app:layout_widthPercent="80.14%" />

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/call_activity_conversation_send_clickable_view"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                app:layout_widthPercent="16.53%">

                <View
                    android:id="@+id/call_activity_conversation_send_rounded_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerInParent="true"
                    app:layout_aspectRatio="100%" />

                <ImageView
                    android:id="@+id/call_activity_conversation_send_image_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/send_icon"
                    android:layout_centerInParent="true"
                    app:layout_aspectRatio="100%" />

            </androidx.percentlayout.widget.PercentRelativeLayout>

        </androidx.percentlayout.widget.PercentRelativeLayout>

    </androidx.percentlayout.widget.PercentRelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>