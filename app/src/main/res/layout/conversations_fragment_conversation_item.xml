<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="156dp"
    android:background="?attr/white_color">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/conversations_fragment_conversation_item_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.twinlife.twinme.utils.RoundedView
            android:id="@+id/conversations_fragment_conversation_unread_view"
            android:layout_centerVertical="true"
            app:layout_aspectRatio="100%"
            app:layout_heightPercent="12.82%"
            app:layout_marginStartPercent="1.07%" />

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/conversations_fragment_conversation_item_avatar_container_view"
            android:layout_centerVertical="true"
            app:layout_aspectRatio="100%"
            app:layout_marginStartPercent="5.6%">

            <org.twinlife.twinme.utils.RoundedView
                android:id="@+id/conversations_fragment_conversation_item_no_avatar_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <org.twinlife.twinme.utils.CircularImageView
                android:id="@+id/conversations_fragment_conversation_item_avatar_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />

            <org.twinlife.twinme.utils.CircularImageView
                android:id="@+id/conversations_fragment_conversation_item_member_one_avatar_view"
                android:scaleType="fitCenter"
                app:layout_aspectRatio="100%"
                app:layout_heightPercent="44.23%" />

            <org.twinlife.twinme.utils.CircularImageView
                android:id="@+id/conversations_fragment_conversation_item_member_two_avatar_view"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/conversations_fragment_conversation_item_member_one_avatar_view"
                android:scaleType="fitCenter"
                app:layout_aspectRatio="100%"
                app:layout_heightPercent="44.23%" />

            <org.twinlife.twinme.utils.CircularImageView
                android:id="@+id/conversations_fragment_conversation_item_member_three_avatar_view"
                android:layout_alignParentBottom="true"
                android:scaleType="fitCenter"
                app:layout_aspectRatio="100%"
                app:layout_heightPercent="44.23%" />

            <org.twinlife.twinme.utils.CircularImageView
                android:id="@+id/conversations_fragment_conversation_item_member_four_avatar_view"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:scaleType="fitCenter"
                app:layout_aspectRatio="100%"
                app:layout_heightPercent="44.23%" />

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/conversations_fragment_conversation_item_more_view"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                app:layout_aspectRatio="100%"
                app:layout_heightPercent="44.23%">

                <org.twinlife.twinme.utils.RoundedView
                    android:id="@+id/conversations_fragment_conversation_item_more_rounded_view"
                    android:layout_height="match_parent"
                    app:layout_aspectRatio="100%"
                    app:layout_heightPercent="100%" />

                <TextView
                    android:id="@+id/conversations_fragment_conversation_item_more_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

            </androidx.percentlayout.widget.PercentRelativeLayout>

        </androidx.percentlayout.widget.PercentRelativeLayout>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/conversations_fragment_conversation_item_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/conversations_fragment_conversation_item_avatar_container_view"
            android:layout_toRightOf="@id/conversations_fragment_conversation_item_avatar_container_view"
            app:layout_marginStartPercent="4.67%">

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/conversations_fragment_conversation_item_top_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_marginEndPercent="5.88%">

                <TextView
                    android:id="@+id/conversations_fragment_conversation_item_name_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1" />

                <ImageView
                    android:id="@+id/conversations_fragment_conversation_item_certified_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/conversations_fragment_conversation_item_name_view"
                    android:layout_toEndOf="@+id/conversations_fragment_conversation_item_name_view"
                    android:src="@drawable/authentified_relation_icon"
                    android:visibility="gone"
                    app:layout_aspectRatio="100%" />

                <TextView
                    android:id="@+id/conversations_fragment_conversation_item_date_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:ellipsize="end"
                    android:lines="1" />

            </androidx.percentlayout.widget.PercentRelativeLayout>

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/conversations_fragment_conversation_item_tag_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone">

                <TextView
                    android:id="@+id/conversations_fragment_conversation_item_tag_title_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/show_contact_activity_pending" />

            </androidx.percentlayout.widget.PercentRelativeLayout>

            <TextView
                android:id="@+id/conversations_fragment_conversation_item_information_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/conversations_fragment_conversation_item_top_view"
                android:ellipsize="end"
                android:lines="2"
                app:layout_marginEndPercent="5.88%" />

        </androidx.percentlayout.widget.PercentRelativeLayout>

        <View
            android:id="@+id/conversations_fragment_conversation_item_separator_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="?attr/separator_color"
            android:layout_alignStart="@+id/conversations_fragment_conversation_item_text_view"
            android:layout_alignLeft="@+id/conversations_fragment_conversation_item_text_view"
            android:layout_alignParentBottom="true" />
    </androidx.percentlayout.widget.PercentRelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>