<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/group_member_activity_menu_action_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true">

        <org.twinlife.twinme.utils.CircularImageView
            android:id="@+id/group_member_activity_menu_avatar_view"
            android:layout_centerHorizontal="true"
            app:layout_aspectRatio="100%" />

        <TextView
            android:id="@+id/group_member_activity_menu_name_view"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/group_member_activity_menu_avatar_view"
            android:gravity="center"
            app:layout_widthPercent="89.33%" />

        <View
            android:layout_above="@+id/group_member_activity_menu_invite_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="?attr/separator_color"
            android:alpha="0.5" />

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/group_member_activity_menu_invite_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/group_member_activity_menu_remove_view">

            <ImageView
                android:id="@+id/group_member_activity_menu_invite_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/invite_member"
                app:layout_aspectRatio="100%"
                app:layout_heightPercent="33%"
                app:layout_marginStartPercent="4%" />

            <TextView
                android:id="@+id/group_member_activity_menu_invite_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/application_remove"
                app:layout_marginEndPercent="4.27%"
                app:layout_marginStartPercent="12.8%" />

        </androidx.percentlayout.widget.PercentRelativeLayout>

        <View
            android:layout_below="@+id/group_member_activity_menu_invite_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="?attr/separator_color"
            android:alpha="0.5" />

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/group_member_activity_menu_remove_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/group_member_activity_menu_remove_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/delete_item"
                app:layout_aspectRatio="89.33%"
                app:layout_heightPercent="33%"
                app:layout_marginStartPercent="4%" />

            <TextView
                android:id="@+id/group_member_activity_menu_remove_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/application_remove"
                app:layout_marginEndPercent="4.27%"
                app:layout_marginStartPercent="12.8%" />

        </androidx.percentlayout.widget.PercentRelativeLayout>

    </androidx.percentlayout.widget.PercentRelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>