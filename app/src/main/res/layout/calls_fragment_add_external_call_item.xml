<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/calls_fragment_add_external_call_item_add_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:layout_marginStartPercent="5.6%">

        <org.twinlife.twinme.utils.RoundedView
            android:id="@+id/calls_fragment_add_external_call_item_rounded_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/calls_fragment_add_external_call_item_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            android:src="@drawable/add_external_call"
            app:layout_aspectRatio="100%"
            app:tint="#FFFFFF" />
    </androidx.percentlayout.widget.PercentRelativeLayout>

    <TextView
        android:id="@+id/calls_fragment_add_external_call_item_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/calls_fragment_add_external_call_item_add_view"
        android:layout_toRightOf="@id/calls_fragment_add_external_call_item_add_view"
        android:text="@string/calls_fragment_create_link"
        app:layout_marginStartPercent="4.67%" />

    <View
        android:id="@+id/calls_fragment_add_external_call_item_separator_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="?attr/separator_color"
        android:layout_alignParentBottom="true" />

</androidx.percentlayout.widget.PercentRelativeLayout>