<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toast_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/toast_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/toast_background"
        android:elevation="5dp"
        app:layout_marginBottomPercent="2.5%"
        app:layout_marginStartPercent="2.5%"
        app:layout_marginTopPercent="2.5%"
        app:layout_widthPercent="95%">

        <ImageView
            android:id="@+id/toast_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:src="@drawable/splash_screen_logo"
            android:scaleType="fitCenter"
            app:layout_marginStartPercent="4.95%" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/toast_image"
            android:layout_toRightOf="@+id/toast_image"
            android:orientation="vertical"
            app:layout_marginStartPercent="4.95%"
            app:layout_marginEndPercent="4.95%">

            <TextView
                android:id="@+id/toast_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/application_name" />

            <TextView
                android:id="@+id/toast_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </androidx.percentlayout.widget.PercentRelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>