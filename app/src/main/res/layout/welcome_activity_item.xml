<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/welcome_activty_item_image_view"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        app:layout_marginTopPercent="2.79%"
        app:layout_heightPercent="65.12%" />

    <TextView
        android:id="@+id/welcome_activty_item_text_view"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_activty_item_image_view"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        app:layout_widthPercent="90.93%"
        app:layout_marginTopPercent="3.26%" />

</androidx.percentlayout.widget.PercentRelativeLayout>