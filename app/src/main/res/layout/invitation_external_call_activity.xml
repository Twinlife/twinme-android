<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/invitation_external_call_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/invitation_external_call_activity_tool_bar"
        layout="@layout/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/invitation_external_call_activity_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/invitation_external_call_activity_tool_bar"/>

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/invitation_external_call_activity_invitation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/invitation_external_call_activity_tool_bar"
        app:layout_widthPercent="85.33%"
        app:layout_heightPercent="54.97%"
        app:layout_marginTopPercent="10.49%">

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/invitation_external_call_activity_header_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.twinlife.twinme.utils.RoundedView
                android:id="@+id/invitation_external_call_activity_red_rounded_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                app:layout_heightPercent="28.89%"
                app:layout_aspectRatio="100%"/>

            <org.twinlife.twinme.utils.RoundedView
                android:id="@+id/invitation_external_call_activity_yellow_rounded_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/invitation_external_call_activity_red_rounded_view"
                app:layout_heightPercent="28.89%"
                app:layout_aspectRatio="100%" />

            <org.twinlife.twinme.utils.RoundedView
                android:id="@+id/invitation_external_call_activity_green_rounded_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/invitation_external_call_activity_yellow_rounded_view"
                app:layout_heightPercent="28.89%"
                app:layout_aspectRatio="100%" />

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/invitation_external_call_activity_name_container_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_toEndOf="@+id/invitation_external_call_activity_green_rounded_view"
                app:layout_heightPercent="57.78%"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/invitation_external_call_activity_name_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:lines="1"
                    android:ellipsize="end"
                    app:layout_widthPercent="93.55%" />

            </androidx.percentlayout.widget.PercentRelativeLayout>

            <org.twinlife.twinme.utils.CircularImageView
                android:id="@+id/invitation_external_call_activity_avatar_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:layout_aspectRatio="100%"
                app:layout_heightPercent="57.78%" />

        </androidx.percentlayout.widget.PercentRelativeLayout>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/invitation_external_call_activity_qrcode_container_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/invitation_external_call_activity_header_view"
            android:layout_centerHorizontal="true"
            app:layout_heightPercent="37.5%"
            app:layout_aspectRatio="100%"
            app:layout_marginTopPercent="6.5%">

            <ImageView
                android:id="@+id/invitation_external_call_activity_qrcode_view"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                app:layout_aspectRatio="100%"
                app:layout_heightPercent="93.33%" />

        </androidx.percentlayout.widget.PercentRelativeLayout>

        <TextView
            android:id="@+id/invitation_external_call_activity_twincode_view"
            android:layout_below="@+id/invitation_external_call_activity_qrcode_container_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            app:layout_widthPercent="93.55%"
            app:layout_marginTopPercent="2.47%" />

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/invitation_external_call_activity_reset_clickable_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/invitation_external_call_activity_twincode_view"
            app:layout_widthPercent="35.82%"
            app:layout_heightPercent="17.53%"
            app:layout_marginTopPercent="6.3%"
            app:layout_marginStartPercent="7.09%">

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/invitation_external_call_activity_reset_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                app:layout_aspectRatio="100%"
                app:layout_heightPercent="43.75%">

                <org.twinlife.twinme.utils.RoundedView
                    android:id="@+id/invitation_external_call_activity_reset_rounded_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_aspectRatio="100%" />

                <ImageView
                    android:id="@+id/invitation_external_call_activity_reset_icon_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/generate_code"
                    android:layout_centerInParent="true"
                    app:layout_aspectRatio="100%"
                    app:layout_heightPercent="45.71%" />
            </androidx.percentlayout.widget.PercentRelativeLayout>

            <TextView
                android:id="@+id/invitation_external_call_activity_reset_text_view"
                android:layout_below="@+id/invitation_external_call_activity_reset_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/main_activity_reset_conversation"
                app:layout_marginTopPercent="7.81%" />
        </androidx.percentlayout.widget.PercentRelativeLayout>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/invitation_external_call_activity_save_clickable_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/invitation_external_call_activity_twincode_view"
            app:layout_widthPercent="35.82%"
            app:layout_heightPercent="17.53%"
            app:layout_marginTopPercent="6.3%"
            app:layout_marginEndPercent="7.09%">

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/invitation_external_call_activity_save_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                app:layout_aspectRatio="100%"
                app:layout_heightPercent="43.75%">

                <org.twinlife.twinme.utils.RoundedView
                    android:id="@+id/invitation_external_call_activity_save_rounded_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_aspectRatio="100%"/>

                <ImageView
                    android:id="@+id/invitation_external_call_activity_save_icon_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/save_item"
                    android:layout_centerInParent="true"
                    app:layout_aspectRatio="100%"
                    app:layout_heightPercent="45.71%" />
            </androidx.percentlayout.widget.PercentRelativeLayout>

            <TextView
                android:id="@+id/invitation_external_call_activity_save_text_view"
                android:layout_below="@+id/invitation_external_call_activity_save_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/application_save"
                app:layout_marginTopPercent="7.81%" />
        </androidx.percentlayout.widget.PercentRelativeLayout>

    </androidx.percentlayout.widget.PercentRelativeLayout>

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/invitation_external_call_activity_social_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/invitation_external_call_activity_invitation_view">

        <ImageView
            android:id="@+id/invitation_external_call_activity_social_icon_view"
            android:layout_centerVertical="true"
            android:src="@drawable/share_item"
            app:layout_aspectRatio="100%" />

        <TextView
            android:id="@+id/invitation_external_call_activity_social_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/invitation_external_call_activity_social_icon_view"
            android:text="@string/invitation_call_activity_share" />
    </androidx.percentlayout.widget.PercentRelativeLayout>

    <TextView
        android:id="@+id/invitation_external_call_activity_social_subtitle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invitation_external_call_activity_social_view"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/add_contact_activity_social_subtitle"
        app:layout_widthPercent="89.06%" />

    <TextView
        android:id="@+id/invitation_external_call_activity_message_view"
        android:layout_below="@+id/invitation_external_call_activity_social_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/invitation_call_activity_message"
        app:layout_widthPercent="89.06%"
        app:layout_marginTopPercent="9.22%" />

    <ProgressBar
        android:id="@+id/invitation_external_call_activity_progress_bar"
        style="@android:style/Widget.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <org.twinlife.twinme.utils.ClickToCallView
        android:id="@+id/invitation_external_call_activity_save_click_to_call_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

</androidx.percentlayout.widget.PercentRelativeLayout>