<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/menu_manage_conversation_action_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/menu_manage_conversation_title_view"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:lines="2"
            android:text="@string/conversation_activity_manage_conversation"
            app:layout_widthPercent="94%" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menu_manage_conversation_list_view"
            android:layout_below="@+id/menu_manage_conversation_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

    </androidx.percentlayout.widget.PercentRelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>