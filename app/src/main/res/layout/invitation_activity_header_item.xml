<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <org.twinlife.twinme.utils.CircularImageView
        android:id="@+id/invitation_activity_header_item_avatar_view"
        android:layout_width="0dp"
        android:layout_centerHorizontal="true"
        app:layout_aspectRatio="100%" />

    <TextView
        android:id="@+id/invitation_activity_header_item_name_view"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invitation_activity_header_item_avatar_view"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        app:layout_widthPercent="89.33%" />

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/invitation_activity_header_item_description_container_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/invitation_activity_header_item_name_view">

        <TextView
            android:id="@+id/invitation_activity_header_item_description_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:text="@string/first_invite_contact_activity_description"
            app:layout_widthPercent="89.33%" />
    </androidx.percentlayout.widget.PercentRelativeLayout>

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/invitation_activity_social_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/invitation_activity_header_item_description_container_view">

        <TextView
            android:id="@+id/invitation_activity_social_title_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/add_contact_activity_title"
            app:layout_widthPercent="89.06%" />

    </androidx.percentlayout.widget.PercentRelativeLayout>

    <TextView
        android:id="@+id/invitation_activity_social_subtitle_view"
        android:layout_below="@+id/invitation_activity_social_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/add_contact_activity_social_subtitle"
        app:layout_widthPercent="89.06%" />

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/invitation_activity_in_person_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/invitation_activity_social_subtitle_view">

        <TextView
            android:id="@+id/invitation_activity_in_person_title_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/add_contact_activity_in_person_title"
            app:layout_widthPercent="89.06%" />

    </androidx.percentlayout.widget.PercentRelativeLayout>

    <TextView
        android:id="@+id/invitation_activity_in_person_subtitle_view"
        android:layout_below="@+id/invitation_activity_in_person_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/add_contact_activity_in_person_subtitle"
        app:layout_widthPercent="89.06%" />

</androidx.percentlayout.widget.PercentRelativeLayout>