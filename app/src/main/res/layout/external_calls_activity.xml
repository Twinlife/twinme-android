<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/external_calls_activity_tool_bar"
        layout="@layout/add_group_member_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/external_calls_activity_no_call_receiver_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/premium_feature_click_to_call"
        android:visibility="gone"
        android:layout_below="@+id/external_calls_activity_tool_bar"
        app:layout_marginTopPercent="6.16%" />

    <TextView
        android:id="@+id/external_calls_activity_no_call_receiver_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/external_calls_activity_no_call_receiver_image_view"
        android:layout_centerHorizontal="true"
        android:text="@string/premium_services_activity_click_to_call_subtitle"
        android:visibility="gone"
        app:layout_widthPercent="88.26%" />

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/external_calls_activity_create_call_receiver_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        app:layout_marginBottomPercent="3.45%">

        <TextView
            android:id="@+id/external_calls_activity_create_call_receiver_title_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/calls_fragment_create_link" />

    </androidx.percentlayout.widget.PercentRelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/external_calls_activity_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/external_calls_activity_tool_bar" />

    <ProgressBar
        android:id="@+id/external_calls_activity_progress_bar"
        style="@android:style/Widget.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</androidx.percentlayout.widget.PercentRelativeLayout>