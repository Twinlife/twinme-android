<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="144dp"
    android:background="?attr/white_color">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/spaces_activity_space_item_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/spaces_activity_space_item_space_view"
            app:layout_heightPercent="69.35%"
            app:layout_aspectRatio="100%"
            app:layout_marginStartPercent="5.6%"
            android:layout_centerVertical="true">

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/side_menu_space_item_no_avatar_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter">

                <View
                    android:id="@+id/spaces_activity_space_item_no_avatar_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    app:layout_aspectRatio="100%" />

                <TextView
                    android:id="@+id/spaces_activity_space_item_no_avatar_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </androidx.percentlayout.widget.PercentRelativeLayout>

            <org.twinlife.twinme.utils.RoundedImageView
                android:id="@+id/spaces_activity_space_item_avatar_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />
        </androidx.percentlayout.widget.PercentRelativeLayout>

        <ImageView
            android:id="@+id/spaces_activity_space_item_notitification_view"
            android:scaleType="fitCenter"
            android:src="@drawable/notification_mark_space"
            app:layout_aspectRatio="100%"
            app:layout_heightPercent="30.55%"
            app:layout_marginTopPercent="11.11%"
            app:layout_marginStartPercent="14.13%" />

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/spaces_activity_space_item_space_information_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/spaces_activity_space_item_space_view"
            android:layout_toRightOf="@id/spaces_activity_space_item_space_view"
            app:layout_widthPercent="60.53%"
            app:layout_marginStartPercent="4.26%">

            <TextView
                android:id="@+id/spaces_activity_space_item_space_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1" />

            <TextView
                android:id="@+id/spaces_activity_space_item_description_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spaces_activity_space_item_space_name_view"
                android:ellipsize="end"
                android:lines="1" />
        </androidx.percentlayout.widget.PercentRelativeLayout>

        <ImageView
            android:id="@+id/spaces_activity_space_item_current_space_image_view"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/check_mark_blue"
            app:layout_aspectRatio="100%"
            app:layout_heightPercent="32.26%"
            app:layout_marginEndPercent="5.87%" />

        <org.twinlife.twinme.utils.RoundedView
            android:id="@+id/spaces_activity_space_item_color_view"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            app:layout_aspectRatio="100%"
            app:layout_heightPercent="27.78%"
            app:layout_marginEndPercent="5.87%" />

        <View
            android:id="@+id/spaces_activity_space_item_current_space_view"
            android:layout_centerVertical="true"
            app:layout_heightPercent="44.44%"
            app:layout_widthPercent="1.6%" />

        <View
            android:id="@+id/spaces_activity_space_item_current_separator_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignStart="@+id/spaces_activity_space_item_space_information_view"
            android:layout_alignLeft="@+id/spaces_activity_space_item_space_information_view"
            android:layout_alignParentBottom="true" />

    </androidx.percentlayout.widget.PercentRelativeLayout>
</androidx.percentlayout.widget.PercentRelativeLayout>