<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="128dp">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/invitation_code_activity_add_code_item_add_view"
        android:layout_centerVertical="true"
        app:layout_aspectRatio="100%"
        app:layout_heightPercent="69.35%"
        app:layout_marginStartPercent="5.6%">

        <org.twinlife.twinme.utils.RoundedView
            android:id="@+id/invitation_code_activity_add_code_item_rounded_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/invitation_code_activity_add_code_item_image_view"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            android:src="@drawable/invitation_code_icon"
            app:layout_aspectRatio="100%"
            app:layout_heightPercent="54%"
            app:tint="#FFFFFF" />
    </androidx.percentlayout.widget.PercentRelativeLayout>

    <TextView
        android:id="@+id/invitation_code_activity_add_code_item_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/invitation_code_activity_add_code_item_add_view"
        android:layout_toRightOf="@id/invitation_code_activity_add_code_item_add_view"
        android:text="@string/main_activity_add_contact"
        app:layout_marginStartPercent="4.67%"
        app:layout_marginEndPercent="4.67%"/>

    <View
        android:id="@+id/invitation_code_activity_add_code_item_separator_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="?attr/separator_color"
        android:layout_alignParentBottom="true" />

</androidx.percentlayout.widget.PercentRelativeLayout>