<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/side_menu_space_item_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.twinlife.twinme.utils.RoundedImageView
            android:id="@+id/side_menu_space_item_avatar_view"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            app:layout_aspectRatio="100%"
            app:layout_heightPercent="68.75%" />

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/side_menu_space_item_no_avatar_view"
            android:layout_centerInParent="true"
            app:layout_aspectRatio="100%"
            app:layout_heightPercent="68.75%">

            <View
                android:id="@+id/side_menu_space_item_no_avatar_rounded_view"
                android:layout_height="match_parent"
                app:layout_aspectRatio="100%"
                app:layout_heightPercent="100%" />

            <TextView
                android:id="@+id/side_menu_space_item_no_avatar_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </androidx.percentlayout.widget.PercentRelativeLayout>

        <ImageView
            android:id="@+id/side_menu_space_item_notitification_view"
            android:scaleType="fitCenter"
            android:src="@drawable/notification_mark_space"
            app:layout_aspectRatio="100%"
            app:layout_heightPercent="22.5%"
            app:layout_marginTopPercent="8.12%"
            app:layout_marginStartPercent="69.37%" />

        <View
            android:id="@+id/side_menu_space_item_current_space_view"
            android:layout_centerVertical="true"
            app:layout_heightPercent="40%"
            app:layout_widthPercent="7.5%" />

        <TextView
            android:id="@+id/side_menu_space_item_space_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:layout_marginStartPercent="6.25%"
            app:layout_marginEndPercent="6.25%" />

    </androidx.percentlayout.widget.PercentRelativeLayout>
</androidx.percentlayout.widget.PercentRelativeLayout>