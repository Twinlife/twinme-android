<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/premium_feature_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/premium_feature_activity_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/premium_feature_activity_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true">

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/premium_feature_activity_update_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/premium_feature_activity_update_title_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/navigation_activity_subscribe"
                app:layout_widthPercent="89.06%" />
        </androidx.percentlayout.widget.PercentRelativeLayout>
    </androidx.percentlayout.widget.PercentRelativeLayout>

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/premium_feature_activity_close_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/premium_feature_activity_list_view"
        android:contentDescription="@string/application_cancel">

        <ImageView
            android:id="@+id/premium_feature_activity_close_image_view"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            android:src="@drawable/close"
            app:layout_aspectRatio="100%"
            app:layout_heightPercent="52%" />
    </androidx.percentlayout.widget.PercentRelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>