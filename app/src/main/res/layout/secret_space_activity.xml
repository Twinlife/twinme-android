<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/secret_space_activity_content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="7.20%">

        <ImageView
            android:id="@+id/secret_space_activity_close_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:src="@drawable/close"
            app:layout_heightPercent="14.44%"
            app:layout_aspectRatio="100%"
            app:layout_marginTopPercent="5%"
            app:layout_marginEndPercent="2.62%" />

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/secret_space_activity_content_name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent="33.33%">

            <EditText
                android:id="@+id/secret_space_activity_name_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:imeOptions="actionDone"
                android:inputType="text|textNoSuggestions|textCapSentences"
                android:hint="@string/settings_space_activity_space_category_title"
                app:layout_marginStartPercent="5.31%"
                app:layout_marginEndPercent="5.31%" />

        </androidx.percentlayout.widget.PercentRelativeLayout>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/secret_space_activity_cancel_view"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            app:layout_marginStartPercent="3.20%"
            app:layout_marginBottomPercent="5%"
            app:layout_widthPercent="44.02%">

            <TextView
                android:id="@+id/secret_space_activity_cancel_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/application_cancel"
                app:layout_widthPercent="89.06%" />

        </androidx.percentlayout.widget.PercentRelativeLayout>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/secret_space_activity_send_view"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            app:layout_marginEndPercent="3.20%"
            app:layout_marginBottomPercent="5%"
            app:layout_widthPercent="44.02%">

            <TextView
                android:id="@+id/secret_space_activity_send_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/application_ok"
                app:layout_widthPercent="89.06%" />

        </androidx.percentlayout.widget.PercentRelativeLayout>

    </androidx.percentlayout.widget.PercentRelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>