<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="128dp">

    <org.twinlife.twinme.utils.CircularImageView
        android:id="@+id/annotation_info_item_avatar_view"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        app:layout_aspectRatio="100%"
        app:layout_heightPercent="69.35%"
        app:layout_marginStartPercent="5.6%" />

    <TextView
        android:id="@+id/annotation_info_item_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/annotation_info_item_avatar_view"
        android:layout_toRightOf="@id/annotation_info_item_avatar_view"
        app:layout_marginStartPercent="4.26%" />

    <ImageView
        android:id="@+id/annotation_info_item_reaction_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/reaction_like"
        app:layout_heightPercent="46.67%"
        app:layout_aspectRatio="100%"
        app:layout_marginEndPercent="4.26%" />

    <View
        android:id="@+id/annotation_info_item_separator_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignStart="@+id/annotation_info_item_name_view"
        android:layout_alignLeft="@+id/annotation_info_item_name_view"
        android:layout_alignParentBottom="true" />

</androidx.percentlayout.widget.PercentRelativeLayout>