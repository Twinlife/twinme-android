<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="128dp">

    <TextView
        android:id="@+id/menu_expiration_period_item_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/menu_expiration_period_item_selected_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/circle_grey"
        android:layout_centerVertical="true"
        app:layout_aspectRatio="100%">

        <ImageView
            android:id="@+id/menu_expiration_period_item_selected_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:cropToPadding="true"
            android:background="@drawable/circle_grey"
            android:src="@drawable/check_mark_grey"
            app:layout_aspectRatio="100%"
            app:layout_heightPercent="100%" />

    </androidx.percentlayout.widget.PercentRelativeLayout>

    <View
        android:id="@+id/menu_expiration_period_item_separator_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="?attr/separator_color"
        android:layout_alignParentBottom="true" />

</androidx.percentlayout.widget.PercentRelativeLayout>