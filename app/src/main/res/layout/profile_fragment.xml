<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_fragment_no_profile_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/onboarding_step3"
        android:layout_below="@+id/contacts_fragment_search_view"
        android:visibility="gone"
        app:layout_marginTopPercent="6.16%" />

    <TextView
        android:id="@+id/profile_fragment_no_profile_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_fragment_no_profile_image_view"
        android:layout_above="@+id/profile_fragment_create_profile_view"
        android:layout_centerHorizontal="true"
        android:gravity="center|top"
        android:ellipsize="end"
        android:text="@string/add_contact_activity_onboarding_message"
        android:visibility="gone"
        app:layout_marginTopPercent="4.43%"
        app:layout_widthPercent="85.33%" />

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/profile_fragment_create_profile_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/profile_fragment_transfer_view"
        android:visibility="gone">

        <TextView
            android:id="@+id/profile_fragment_create_profile_title_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/profile_fragment_create_profile" />

    </androidx.percentlayout.widget.PercentRelativeLayout>

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/profile_fragment_transfer_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:layout_widthPercent="89.33%"
        app:layout_heightPercent="6.74%"
        android:visibility="gone">

        <TextView
            android:id="@+id/profile_fragment_transfer_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/account_activity_transfer_from_another_device"
            app:layout_widthPercent="89.58%"
            app:layout_heightPercent="70%" />
    </androidx.percentlayout.widget.PercentRelativeLayout>

    <ImageView
        android:id="@+id/profile_fragment_avatar_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true" />

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/profile_fragment_side_menu_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        app:layout_aspectRatio="100%"
        app:layout_heightPercent="6%"
        app:layout_marginStartPercent="4.53%">

        <org.twinlife.twinme.utils.RoundedView
            android:id="@+id/profile_fragment_side_menu_rounded_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/profile_fragment_side_menu_icon_view"
            android:layout_width="0dp"
            android:layout_centerInParent="true"
            android:src="@drawable/side_menu"
            app:layout_aspectRatio="100%"
            app:layout_heightPercent="42.5%" />
    </androidx.percentlayout.widget.PercentRelativeLayout>

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/profile_fragment_add_contact_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:layout_aspectRatio="100%"
        app:layout_heightPercent="6%"
        app:layout_marginEndPercent="4.53%"
        android:contentDescription="@string/add_contact_activity_title">

        <org.twinlife.twinme.utils.RoundedView
            android:id="@+id/profile_fragment_add_contact_rounded_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/profile_fragment_add_contact_icon_view"
            android:layout_width="0dp"
            android:layout_centerInParent="true"
            android:src="@drawable/action_bar_add_contact"
            app:layout_aspectRatio="100%"
            app:layout_heightPercent="57.5%" />
    </androidx.percentlayout.widget.PercentRelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/profile_fragment_content_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/profile_fragment_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/show_contact_content">

            <View
                android:id="@+id/profile_fragment_slide_mark_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:layout_widthPercent="12%" />

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/profile_fragment_content_header_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/profile_fragment_title_view"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/application_profile"
                    app:layout_widthPercent="66.67%" />

                <androidx.percentlayout.widget.PercentRelativeLayout
                    android:id="@+id/profile_fragment_edit_clickable_view"
                    app:layout_widthPercent="19.73%"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/application_edit">

                    <ImageView
                        android:id="@+id/profile_fragment_edit_image_view"
                        android:layout_centerInParent="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/action_edit"
                        app:layout_aspectRatio="100%"
                        app:layout_heightPercent="40%" />
                </androidx.percentlayout.widget.PercentRelativeLayout>

            </androidx.percentlayout.widget.PercentRelativeLayout>

            <TextView
                android:id="@+id/profile_fragment_description_text_view"
                android:layout_below="@+id/profile_fragment_content_header_view"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                app:layout_widthPercent="90.93%" />

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/profile_fragment_twincode_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/profile_fragment_description_text_view">

                <ImageView
                    android:id="@+id/profile_fragment_twincode_icon_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/qrcode" />

                <TextView
                    android:id="@+id/profile_fragment_twincode_title_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/profile_fragment_twincode_icon_view"
                    android:layout_toEndOf="@+id/profile_fragment_twincode_icon_view"
                    android:text="@string/profile_fragment_twincode_title" />

            </androidx.percentlayout.widget.PercentRelativeLayout>

            <TextView
                android:id="@+id/profile_fragment_activity_message_view"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_fragment_twincode_view"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/profile_fragment_message"
                app:layout_widthPercent="90.93%" />
        </androidx.percentlayout.widget.PercentRelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/profile_fragment_progress_bar"
        style="@android:style/Widget.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</androidx.percentlayout.widget.PercentRelativeLayout>