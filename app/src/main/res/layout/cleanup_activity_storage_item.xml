<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <org.twinlife.twinme.utils.RoundedView
        android:id="@+id/cleanup_activity_storage_item_rounded_view"
        android:layout_centerVertical="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_aspectRatio="100%"
        app:layout_heightPercent="48%"
        app:layout_marginStartPercent="4.8%" />

    <TextView
        android:id="@+id/cleanup_activity_storage_item_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cleanup_activity_storage_item_rounded_view"
        android:layout_toEndOf="@+id/cleanup_activity_storage_item_rounded_view"
        app:layout_marginStartPercent="4.8%" />

    <TextView
        android:id="@+id/cleanup_activity_storage_item_value_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:layout_marginEndPercent="4.8%" />
</androidx.percentlayout.widget.PercentRelativeLayout>
