<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="100dp">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/base_item_activity_annotation_item_container_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/base_item_activity_annotation_item_image_view"
            android:layout_centerVertical="true"
            app:layout_aspectRatio="100%" />

        <TextView
            android:id="@+id/base_item_activity_annotation_item_count_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/base_item_activity_annotation_item_image_view"
            android:layout_toEndOf="@+id/base_item_activity_annotation_item_image_view"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"/>

    </androidx.percentlayout.widget.PercentRelativeLayout>


</androidx.percentlayout.widget.PercentRelativeLayout>