<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <org.twinlife.twinme.utils.CircularImageView
        android:id="@+id/show_room_activity_room_member_item_avatar_view"
        android:scaleType="fitCenter"
        android:layout_centerInParent="true"
        app:layout_aspectRatio="100%"
        app:layout_heightPercent="66.67%" />

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/show_room_activity_room_member_item_no_avatar_view"
        android:layout_centerInParent="true"
        app:layout_aspectRatio="100%"
        app:layout_heightPercent="66.67%">

        <org.twinlife.twinme.utils.RoundedView
            android:id="@+id/show_room_activity_room_member_item_no_avatar_rounded_view"
            android:layout_height="match_parent"
            app:layout_aspectRatio="100%"
            app:layout_heightPercent="100%" />

        <TextView
            android:id="@+id/show_room_activity_room_member_item_no_avatar_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </androidx.percentlayout.widget.PercentRelativeLayout>
</androidx.percentlayout.widget.PercentRelativeLayout>
