<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/onboarding_confirm_view_overlay_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="visible" />

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/onboarding_confirm_view_action_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <View
            android:id="@+id/onboarding_confirm_view_slide_mark_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:layout_widthPercent="12%" />

        <TextView
            android:id="@+id/onboarding_confirm_view_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/onboarding_confirm_view_slide_mark_view"
            android:gravity="center" />

        <ImageView
            android:id="@+id/onboarding_confirm_view_feature_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/onboarding_confirm_view_title_view"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            app:layout_aspectRatio="100%"/>

        <TextView
            android:id="@+id/onboarding_confirm_view_message_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/onboarding_confirm_view_feature_image_view" />
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/onboarding_confirm_view_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/onboarding_confirm_view_message_view" />

        <RelativeLayout
            android:id="@+id/onboarding_confirm_view_confirm_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/onboarding_confirm_view_list_view">

            <TextView
                android:id="@+id/onboarding_confirm_view_confirm_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/application_ok" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/onboarding_confirm_view_cancel_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/onboarding_confirm_view_confirm_view">

            <TextView
                android:id="@+id/onboarding_confirm_view_cancel_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/application_cancel" />
        </RelativeLayout>

    </androidx.percentlayout.widget.PercentRelativeLayout>

</RelativeLayout>