<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/call_activity_streaming_audio_player_view"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true">

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/call_activity_streaming_audio_container_view"
            android:layout_centerVertical="true"
            app:layout_aspectRatio="100%">

            <ImageView
                android:id="@+id/call_activity_streaming_audio_cover_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/shape_music_cover"
                app:layout_heightPercent="100%"/>

            <ImageView
                android:id="@+id/call_activity_streaming_placeholder_cover_view"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@drawable/music_placeholder"
                app:layout_aspectRatio="100%"
                app:layout_heightPercent="27.27%" />
        </androidx.percentlayout.widget.PercentRelativeLayout>

        <TextView
            android:id="@+id/call_activity_streaming_audio_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/call_activity_streaming_audio_container_view"
            android:layout_toRightOf="@id/call_activity_streaming_audio_container_view"
            android:ellipsize="end"
            android:maxLines="3" />

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/call_activity_streaming_audio_stop_view"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            app:layout_heightPercent="100%">

            <ImageView
                android:id="@+id/call_activity_streaming_audio_stop_image_view"
                android:layout_centerInParent="true"
                android:src="@drawable/toolbar_trash_grey"
                app:layout_aspectRatio="80%"
                app:layout_heightPercent="26.47%"
                app:tint="#FFFFFF" />
        </androidx.percentlayout.widget.PercentRelativeLayout>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/call_activity_streaming_audio_play_view"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/call_activity_streaming_audio_stop_view"
            android:layout_toStartOf="@+id/call_activity_streaming_audio_stop_view"
            app:layout_heightPercent="100%">

            <ImageView
                android:id="@+id/call_activity_streaming_audio_play_image_view"
                android:layout_centerInParent="true"
                android:src="@drawable/audio_item_player_pause"
                app:layout_aspectRatio="80%"
                app:layout_heightPercent="26.47%"
                app:tint="#FFFFFF" />

        </androidx.percentlayout.widget.PercentRelativeLayout>

    </androidx.percentlayout.widget.PercentRelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>