<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="?attr/white_color">

    <TextView
        android:id="@+id/menu_item_child_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:layout_marginStartPercent="5.75%"
        app:layout_marginEndPercent="9.35%" />

    <ImageView
        android:id="@+id/menu_item_child_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitEnd"
        app:layout_heightPercent="30%"
        app:layout_aspectRatio="100%"
        app:layout_marginEndPercent="5.75%" />

    <View
        android:id="@+id/menu_item_child_separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="?attr/separator_color"
        android:layout_alignParentBottom="true" />

</androidx.percentlayout.widget.PercentRelativeLayout>