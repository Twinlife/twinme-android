<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/proxy_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/proxy_activity_tool_bar"
        layout="@layout/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/proxy_activity_container_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/proxy_activity_tool_bar">

        <TextView
            android:id="@+id/proxy_activity_message_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/proxy_activity_warning"
            app:layout_widthPercent="89.06%" />

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/proxy_activity_url_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/proxy_activity_message_view">

            <org.twinlife.twinme.ui.contacts.PasteEditText
                android:id="@+id/proxy_activity_url_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:background="@android:color/transparent"
                android:hint="@string/proxy_activity_add_placeholder"
                android:imeOptions="actionDone"
                android:inputType="text|textUri"
                app:layout_marginStartPercent="5.31%"
                app:layout_marginEndPercent="5.31%" />

        </androidx.percentlayout.widget.PercentRelativeLayout>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/proxy_activity_save_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/proxy_activity_url_content_view">

            <TextView
                android:id="@+id/proxy_activity_save_title_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/application_save"
                app:layout_widthPercent="89.06%" />

        </androidx.percentlayout.widget.PercentRelativeLayout>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/proxy_activity_remove_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/proxy_activity_save_view">

            <TextView
                android:id="@+id/proxy_activity_remove_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/application_delete" />
        </androidx.percentlayout.widget.PercentRelativeLayout>

        <TextView
            android:id="@+id/proxy_activity_format_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/proxy_activity_remove_view"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/proxy_activity_save_view"
            android:layout_alignStart="@+id/proxy_activity_save_view" />

    </androidx.percentlayout.widget.PercentRelativeLayout>

    <ProgressBar
        android:id="@+id/proxy_activity_progress_bar"
        style="@android:style/Widget.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</androidx.percentlayout.widget.PercentRelativeLayout>