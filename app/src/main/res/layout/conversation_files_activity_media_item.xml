<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="252dp">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/conversation_files_activity_media_item_container_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/conversation_files_activity_media_item_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/shape_music_cover"
            app:layout_heightPercent="100%"/>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/conversation_files_activity_media_item_selected_view"
            android:layout_alignRight="@+id/conversation_files_activity_media_item_image_view"
            android:layout_alignEnd="@+id/conversation_files_activity_media_item_image_view"
            android:layout_alignBottom="@+id/conversation_files_activity_media_item_image_view"
            android:background="@drawable/checkbox_background"
            app:layout_aspectRatio="100%">

            <!-- Image heightPercent is not 100% because we need the circle_grey when it is visible.
                 circle_grey has an oval shape and a white background which is required by Android API 16.  -->
            <ImageView
                android:id="@+id/conversation_files_activity_media_item_selected_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:cropToPadding="true"
                android:background="@drawable/circle_grey"
                android:src="@drawable/check_mark_grey"
                app:layout_aspectRatio="100%"
                app:layout_heightPercent="100%" />
        </androidx.percentlayout.widget.PercentRelativeLayout>

    </androidx.percentlayout.widget.PercentRelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>