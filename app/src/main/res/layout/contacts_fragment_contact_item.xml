<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="128dp">

    <org.twinlife.twinme.utils.CircularImageView
        android:id="@+id/contacts_fragment_contact_item_avatar_view"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        app:layout_aspectRatio="100%"
        app:layout_heightPercent="69.35%"
        app:layout_marginStartPercent="5.6%" />

    <TextView
        android:id="@+id/contacts_fragment_contact_item_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/contacts_fragment_contact_item_avatar_view"
        app:layout_marginStartPercent="4.26%" />

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/contacts_fragment_contact_item_tag_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/contacts_fragment_contact_item_name_view"
        android:visibility="gone">

        <TextView
            android:id="@+id/contacts_fragment_contact_item_tag_title_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/show_contact_activity_pending" />

    </androidx.percentlayout.widget.PercentRelativeLayout>

    <ImageView
        android:id="@+id/contacts_fragment_contact_item_tag_image_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/schedule_icon"
        app:tint="@color/accessory_color"
        android:visibility="gone"
        app:layout_heightPercent="31.74%"
        app:layout_aspectRatio="100%" />

    <ImageView
        android:id="@+id/contacts_fragment_contact_item_certified_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/contacts_fragment_contact_item_name_view"
        android:src="@drawable/authentified_relation_icon"
        android:visibility="gone"
        app:layout_aspectRatio="100%" />

    <View
        android:id="@+id/contacts_fragment_contact_item_separator_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignStart="@+id/contacts_fragment_contact_item_name_view"
        android:layout_alignParentBottom="true" />

</androidx.percentlayout.widget.PercentRelativeLayout>