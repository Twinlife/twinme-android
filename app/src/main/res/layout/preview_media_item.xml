<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/preview_media_item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/thumbnail_shape">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/preview_media_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:padding="2dp"
            app:strokeColor="@null"
            app:shapeAppearanceOverlay="@style/ThumbnailImageView"
            app:layout_aspectRatio="100%" />

        <ImageView
            android:id="@+id/preview_media_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            app:layout_aspectRatio="100%" />

        <View
            android:id="@+id/preview_media_item_overlay_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/thumbnail_overlay_shape" />

        <ImageView
            android:id="@+id/preview_media_item_trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            android:src="@drawable/delete_icon"
            app:layout_aspectRatio="100%"
            app:tint="#FFFFFF" />

    </androidx.percentlayout.widget.PercentRelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>