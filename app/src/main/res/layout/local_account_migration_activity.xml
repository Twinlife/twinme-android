<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/local_account_migration_activity_tool_bar"
        layout="@layout/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/local_account_migration_activity_image_view"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/onboarding_migration"
        android:layout_below="@+id/local_account_migration_activity_tool_bar"
        app:layout_aspectRatio="100%"/>

    <TextView
        android:id="@+id/local_account_migration_activity_information_view"
        android:layout_below="@+id/local_account_migration_activity_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/local_account_migration_activity_message"
        app:layout_widthPercent="89.06%" />

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/local_account_migration_activity_accept_view"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:layout_marginBottomPercent="2.3%"
        app:layout_widthPercent="88.04%">

        <TextView
            android:id="@+id/local_account_migration_activity_accept_title_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/application_ok"
            app:layout_widthPercent="89.06%" />
    </androidx.percentlayout.widget.PercentRelativeLayout>

    <ProgressBar
        android:id="@+id/local_account_migration_activity_progress_bar"
        style="@android:style/Widget.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</androidx.percentlayout.widget.PercentRelativeLayout>