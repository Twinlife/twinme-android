<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/conversation_files_activity_section_media_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_marginStartPercent="4.53%"
        app:layout_marginEndPercent="4.67%" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/conversation_files_activity_section_media_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conversation_files_activity_section_media_title_view"
        android:choiceMode="singleChoice"
        android:divider="?attr/separator_color" />
</androidx.percentlayout.widget.PercentRelativeLayout>