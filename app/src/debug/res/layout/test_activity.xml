<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.twinlife.twinme.ui.TestActivity">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        app:layout_heightPercent="10%">

        <ImageView
            android:id="@+id/test_activity_back_image_view"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/start_chevron"
            app:layout_aspectRatio="54.55%"
            app:layout_heightPercent="28.50%"
            app:layout_marginStartPercent="3.47%" />

        <TextView
            android:id="@+id/test_activity_back_label_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/test_activity_back_image_view"
            android:layout_toRightOf="@id/test_activity_back_image_view"
            android:text="@string/application_back"
            app:layout_marginStartPercent="2.13%" />

        <TextView
            android:id="@+id/test_activity_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/test_activity_title"
            tools:layout_editor_absoluteX="162dp" />
    </androidx.percentlayout.widget.PercentRelativeLayout>

    <View
        android:id="@+id/test_activity_back_clickable_view"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="25%" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:layout_marginTopPercent="10%"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/test_message_label" />

        <EditText
            android:id="@+id/test_message_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <Button
            android:id="@+id/test_broadcast_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:text="@string/test_broadcast_title" />

        <Button
            android:id="@+id/test_create_contact_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/test_create_contact_title" />

        <Button
            android:id="@+id/test_delete_contact_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/test_delete_contact_title" />

        <Button
            android:id="@+id/test_create_group_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/test_create_group_title" />

        <Button
            android:id="@+id/test_delete_account_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/test_delete_account_title" />

    </LinearLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>
